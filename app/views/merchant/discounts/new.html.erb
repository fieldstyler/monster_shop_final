<h2>New Discount</h2>
<%= form_tag '/merchant/discounts' do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :percent_off %>
  <%= text_field_tag :percent_off %>

  <%= label_tag :minimum_items %>
  <%= text_field_tag :minimum_items %>

  <%= submit_tag 'Create Discount' %>
<% end %>
